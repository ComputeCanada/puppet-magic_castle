[Unit]
Description=Send slurm jobscripts to userportal
After=network.target

[Service]
User=slurm
Group=slurm
RuntimeDirectory=slurm
WorkingDirectory=/var/spool/slurm
ExecStart=/var/www/userportal-env/bin/python /var/www/userportal/slurm_jobscripts/slurm_jobscripts.py
ExecReload=/bin/kill -s HUP $MAINPID
KillMode=mixed
TimeoutStopSec=5
PrivateTmp=true

[Install]
WantedBy=multi-user.target
